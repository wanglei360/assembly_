<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!--        状态栏颜色，默认使用colorPrimaryDark-->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!--        部分手机颜色无效，所以应使用图片-->
        <item name="android:windowBackground">@mipmap/splash_background</item>

        <!--        EditText在系统填充时，还会给EditText设置一个黄色的底色，这里修改这个底色-->
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent
        </item>

        <!--        沉侵式，拉升到顶部状态栏，并且定义顶部状态栏透明-->
        <item name="android:windowTranslucentStatus">false</item>

        <!--        有的手机因为windowTranslucentStatus导致虚拟键盘在页面的上面，盖住了页面内容，所以添加下面这个属性-->
        <item name="android:windowTranslucentNavigation">false</item>

        <!--        竖屏-->
        <item name="android:screenOrientation">portrait</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>